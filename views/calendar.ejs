<!DOCTYPE html>
<html>
  <head>
    <title>Calendario</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.47/css/bootstrap-datetimepicker.min.css" />
    <link rel="stylesheet" href="/estilo.css">
  </head>
  <body>
    <h1>Seleccione la fecha y hora inicial y la fecha y hora final:</h1>
    <form method="POST" action="/calendario">
      <div class="form-group">
        <label for="datetimepicker1">Fecha y hora inicial:</label>
        <div class="input-group date" id="datetimepicker1">
          <input type="text" class="form-control" name="fechaInicial" />
          <span class="input-group-addon">
            <span class="glyphicon glyphicon-calendar"></span>
          </span>
        </div>
      </div>
      <div class="form-group">
        <label for="datetimepicker2">Fecha y hora final:</label>
        <div class="input-group date" id="datetimepicker2">
          <input type="text" class="form-control" name="fechaFinal" />
          <span class="input-group-addon">
            <span class="glyphicon glyphicon-calendar"></span>
          </span>
        </div>
      </div>
      <input type="submit" value="Seleccionar">
    </form>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.47/js/bootstrap-datetimepicker.min.js"></script>
    <script>
      $(function () {
        $('#datetimepicker1').datetimepicker({
          minDate: moment(),            //Esta es la opci√≥n que bloquea fechas anteriores//
          format: 'DD/MM/YYYY HH:mm:ss'
        });
        $('#datetimepicker2').datetimepicker({
          minDate: moment(),
          format: 'DD/MM/YYYY HH:mm:ss'
        });

        $("#datetimepicker1").on("dp.change", function (e) {
          $('#datetimepicker2').data("DateTimePicker").minDate(e.date);
        });
        $("#datetimepicker2").on("dp.change", function (e) {
          $('#datetimepicker1').data("DateTimePicker").maxDate(e.date);
        });
      });
    </script>
  </body>
</html>
