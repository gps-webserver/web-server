    <title>MYGPS-Históricos</title>
    <link rel="stylesheet" type="text/css" href="estilo.css"/>
</head>
<body>

<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-light" style="background-color: #BEAED3;">
    <div class="container-fluid">
        <a class="navbar-brand d-flex justify-content-center" href="/"> <img src="/LOGOGPS.png" alt="" style="max-width: 180px; height: auto;"> </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link active btn btn-outline mx-2 front-size-nav " ; color: #fff;" aria-current="page" href="/">Página Principal</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active btn btn-outline mx-2 front-size-nav " ; color: #fff;" href="/pagina-historicos">Históricos</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<!-- Header -->

<header id="header">
    <div class="container-fluid mt-5 mb-5">
        <div class="row d-flex">
            <div class="col-md-8">
                <div class="mapa-right text-center">
                    <h1>Ruta recorrida por vehículo</h1>
                    <div class="container-map">
                        <div class="selected-info"  style="font-size: 15px;" >
                            <label>Fecha: <p id="selected-date">--/--/----</p></label>
                            <label>Hora: <p id="selected-hour">--:--</p></label>
                            <label>Sonido: <p id="selected-sound">--</p><span> dB</span></label>
                        </div>
                        <div id="map"></div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card" style="background-color: #BEAED3;">
                    <div class="card-body">
                        <h2 class="card-title text-center" style="background-color: #553184; color: #fff; padding: 10px;">Vista históricos</h2>
                        <div class="form-group">
                            <label for="mySlider">Radio:</label>
                            <input type="range" id="mySlider" name="mySlider" min="0" max="500" step="1" value="50" class="form-control-range">
                            <span id="radioValue"></span>
                        </div>
                        <div class="form-group">
                            <label for="Datafound">Linea de tiempo:</label>
                            <input type="range" id="Datafound" name="Datafound" min="0" max="0" step="1" value="0" class="form-control-range">
                        </div>
                        <button onclick="historico()" class="btn btn-primary mt-3" style="background-color: #553184;">MOSTRAR</button>
                        <div class="form-group mt-3">
                            <label for="start">Fecha Inicio:</label>
                            <input type="datetime-local" id="start" name="trip-start" value="" min="" max="" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="end">Fecha Final:</label>
                            <input type="datetime-local" id="end" name="trip-end" value="" min="" max="" class="form-control">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
    
    
    <script src="https://unpkg.com/leaflet@1.9.3/dist/leaflet.js"
